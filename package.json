{
  "private": true,
  "name": "nightly-cli",
  "description": "Unofficial CLI for Changelog Nightly",
  "packageManager": "pnpm@10.28.2",
  "version": "0.1.0",
  "type": "module",
  "bin": {
    "nightly": "./src/index.ts"
  },
  "scripts": {
    "start": "node src/index.ts",
    "lint": "biome ci .",
    "lint:fix": "biome check --fix .",
    "check": "tsgo -p .",
    "build": "rolldown -c",
    "build:bin": "$npm_node_execpath --build-sea sea-config.json",
    "build:exe": "%npm_node_execpath% --build-sea sea-config-windows.json",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@tsconfig/node-lts": "^24.0.0",
    "@types/node": "^25.2.1",
    "@typescript/native-preview": "latest",
    "rimraf": "^6.1.2",
    "rolldown": "1.0.0-rc.3"
  }
}
